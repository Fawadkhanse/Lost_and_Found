<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Found Item Image -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <ImageView
                android:id="@+id/ivFoundItemImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_placeholder" />

        </androidx.cardview.widget.CardView>

        <!-- Found Item Title -->
        <TextView
            android:id="@+id/tvFoundItemTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Found Item Title"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_gray"
            android:layout_marginVertical="12dp" />

        <!-- Claimant Info -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Claimant Information"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvUserEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email: user@example.com"
            android:textSize="14sp"
            android:textColor="@color/dark_gray"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvCreatedAt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submitted: 01 Jan 2025"
            android:textSize="14sp"
            android:textColor="@color/dark_gray"
            android:layout_marginBottom="12dp" />

        <!-- Claim Description -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Claim Description"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvClaimDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This is my item because..."
            android:textSize="14sp"
            android:textColor="@color/dark_gray"
            android:layout_marginBottom="12dp" />

        <!-- Proof of Ownership -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Proof of Ownership"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvProofOfOwnership"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="I have the receipt and serial number..."
            android:textSize="14sp"
            android:textColor="@color/dark_gray"
            android:layout_marginBottom="12dp" />

        <!-- Admin Notes (if available) -->
        <TextView
            android:id="@+id/tvAdminNotesLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Admin Notes"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvAdminNotes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Admin notes here..."
            android:textSize="14sp"
            android:textColor="@color/dark_gray"
            android:visibility="gone" />

    </LinearLayout>

</ScrollView>
