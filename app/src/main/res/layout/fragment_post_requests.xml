<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Header -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Post Requests"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Tabs Container -->
    <LinearLayout
        android:id="@+id/tabsContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btnLostItems"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Lost"
            android:textColor="@color/white"
            android:background="@drawable/rounded_button_black"
            app:backgroundTint="@color/primary_teal"
            android:layout_marginEnd="4dp"
            android:textAllCaps="false"
            android:textSize="14sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnFoundItems"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Found"
            android:textColor="@color/black"
            android:background="@drawable/rounded_button_gray"
            app:backgroundTint="@null"
            android:layout_marginHorizontal="4dp"
            android:textAllCaps="false"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btnClaims"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Claims"
            android:textColor="@color/black"
            app:backgroundTint="@null"
            android:background="@drawable/rounded_button_gray"
            android:layout_marginStart="4dp"
            android:textAllCaps="false"
            android:textSize="14sp" />

    </LinearLayout>

    <!-- Swipe Refresh Layout -->
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefresh"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tabsContainer"
        app:layout_constraintBottom_toTopOf="@id/bottomNavAdmin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Lost Items Layout -->
            <LinearLayout
                android:id="@+id/layoutLostItems"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:id="@+id/tvNoLostItems"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No pending lost items"
                    android:textSize="16sp"
                    android:textColor="@color/dark_gray"
                    android:gravity="center"
                    android:padding="24dp"
                    android:visibility="gone" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvPendingLostItems"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="8dp"
                    android:clipToPadding="false"
                    tools:listitem="@layout/item_post_request" />

            </LinearLayout>

            <!-- Found Items Layout -->
            <LinearLayout
                android:id="@+id/layoutFoundItems"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tvNoFoundItems"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No pending found items"
                    android:textSize="16sp"
                    android:textColor="@color/dark_gray"
                    android:gravity="center"
                    android:padding="24dp"
                    android:visibility="gone" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvPendingFoundItems"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="8dp"
                    android:clipToPadding="false"
                    tools:listitem="@layout/item_post_request" />

            </LinearLayout>

            <!-- Claims Layout -->
            <LinearLayout
                android:id="@+id/layoutClaims"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tvNoClaims"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No pending claims"
                    android:textSize="16sp"
                    android:textColor="@color/dark_gray"
                    android:gravity="center"
                    android:padding="24dp"
                    android:visibility="gone" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvPendingClaims"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="8dp"
                    android:clipToPadding="false"
                    tools:listitem="@layout/item_claim_request" />

            </LinearLayout>

        </FrameLayout>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <!-- Bottom Navigation -->
    <include
        android:id="@+id/bottomNavAdmin"
        layout="@layout/layout_bottom_navigation_admin"
        android:layout_width="0dp"
        android:visibility="gone"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>