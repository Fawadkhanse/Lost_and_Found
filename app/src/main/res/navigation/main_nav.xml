<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/chatFragment"
        android:name="com.example.lostandfound.feature.chat.ChatFragment"
        android:label="fragment_chat"
        tools:layout="@layout/fragment_chat" >
        <action
            android:id="@+id/action_chatFragment_to_itemDetailFragment"
            app:destination="@id/itemDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/myListFragment"
        android:name="com.example.lostandfound.feature.mylist.MyListFragment"
        android:label="fragment_my_list"
        tools:layout="@layout/fragment_my_list" >
        <action
            android:id="@+id/action_myListFragment_to_itemDetailFragment"
            app:destination="@id/itemDetailFragment" />
        <action
            android:id="@+id/action_myListFragment_to_viewItemFragment"
            app:destination="@id/viewItemFragment" />
    </fragment>
    <fragment
        android:id="@+id/viewFoundItemFragment"
        android:name="com.example.lostandfound.feature.item.ViewFoundItemFragment"
        android:label="fragment_view_found_item"
        tools:layout="@layout/fragment_view_found_item" />
    <fragment
        android:id="@+id/viewItemFragment"
        android:name="com.example.lostandfound.feature.item.ViewItemFragment"
        android:label="fragment_view_item"
        tools:layout="@layout/fragment_view_item" />
    <fragment
        android:id="@+id/viewLostItemFragment"
        android:name="com.example.lostandfound.feature.item.ViewLostItemFragment"
        android:label="fragment_view_lost_item"
        tools:layout="@layout/fragment_view_lost_item" />
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.lostandfound.feature.auth.LoginFragment"
        android:label="LoginFragment"
        tools:layout="@layout/fragment_login"
        >
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_loginFragment_to_residentHomeFragment"
            app:destination="@id/residentHomeFragment" />
        <action
            android:id="@+id/action_loginFragment_to_forgotPasswordFragment2"
            app:destination="@id/forgotPasswordFragment" />
        <action
            android:id="@+id/action_loginFragment_to_adminHomeFragment"
            app:destination="@id/adminHomeFragment" />
    </fragment>
    <fragment
        android:id="@+id/forgotPasswordFragment"
        android:name="com.example.lostandfound.feature.auth.ForgotPasswordFragment"
        android:label="fragment_forgot_password"
        tools:layout="@layout/fragment_forgot_password" >
        <action
            android:id="@+id/action_forgotPasswordFragment_to_resetPasswordFragment"
            app:destination="@id/resetPasswordFragment" />
    </fragment>
    <fragment
        android:id="@+id/personalInfoFragment"
        android:name="com.example.lostandfound.feature.profile.PersonalInfoFragment"
        android:label="fragment_personal_info"
        tools:layout="@layout/fragment_personal_info" >
        <action
            android:id="@+id/action_personalInfoFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.lostandfound.feature.auth.RegisterFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register" />
    <fragment
        android:id="@+id/residentHomeFragment"
        android:name="com.example.lostandfound.feature.home.ResidentHomeFragment"
        android:label="ResidentHomeFragment"
        tools:layout="@layout/fragment_resident"
        >
        <action
            android:id="@+id/action_residentHomeFragment_to_viewItemFragment"
            app:destination="@id/viewItemFragment" />
        <action
            android:id="@+id/action_residentHomeFragment_to_addItemFragment"
            app:destination="@id/addItemFragment" />
        <action
            android:id="@+id/action_residentHomeFragment_to_personalInfoFragment"
            app:destination="@id/personalInfoFragment" />
        <action
            android:id="@+id/action_residentHomeFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_residentHomeFragment_to_myListFragment"
            app:destination="@id/myListFragment" />
        <action
            android:id="@+id/action_residentHomeFragment_to_itemDetailFragment"
            app:destination="@id/itemDetailFragment" />
        <action
            android:id="@+id/action_residentHomeFragment_to_messagesFragment"
            app:destination="@id/messagesFragment" />
    </fragment>
    <fragment
        android:id="@+id/addItemFragment"
        android:name="com.example.lostandfound.feature.item.AddItemFragment"
        android:label="fragment_add_item"
        tools:layout="@layout/fragment_add_item" >
        <action
            android:id="@+id/action_addItemFragment_to_reportLostItemFragment"
            app:destination="@id/reportLostItemFragment" />
        <action
            android:id="@+id/action_addItemFragment_to_reportFoundItemFragment"
            app:destination="@id/reportFoundItemFragment" />
    </fragment>
    <fragment
        android:id="@+id/reportFoundItemFragment"
        android:name="com.example.lostandfound.feature.report.ReportFoundItemFragment"
        android:label="fragment_report_found_item"
        tools:layout="@layout/fragment_report_found_item" />
    <fragment
        android:id="@+id/reportLostItemFragment"
        android:name="com.example.lostandfound.feature.report.ReportLostItemFragment"
        android:label="fragment_report_lost_item"
        tools:layout="@layout/fragment_report_lost_item" />
    <fragment
        android:id="@+id/itemDetailFragment"
        android:name="com.example.lostandfound.feature.item.ItemDetailFragment"
        android:label="fragment_item_detail"
        tools:layout="@layout/fragment_item_detail" >
        <action
            android:id="@+id/action_itemDetailFragment_to_claimFragment"
            app:destination="@id/claimFragment" />
        <action
            android:id="@+id/action_itemDetailFragment_to_reportLostItemFragment"
            app:destination="@id/reportLostItemFragment" />
        <action
            android:id="@+id/action_itemDetailFragment_to_reportFoundItemFragment"
            app:destination="@id/reportFoundItemFragment" />
    </fragment>
    <fragment
        android:id="@+id/adminHomeFragment"
        android:name="com.example.lostandfound.feature.home.admin.AdminHomeFragment"
        android:label="fragment_admin_home"
        tools:layout="@layout/fragment_admin_home" >
        <action
            android:id="@+id/action_adminHomeFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_adminHomeFragment_to_postRequestsFragment"
            app:destination="@id/postRequestsFragment" />
        <action
            android:id="@+id/action_adminHomeFragment_to_personalInfoFragment"
            app:destination="@id/personalInfoFragment" />
        <action
            android:id="@+id/action_adminHomeFragment_to_registerFragment2"
            app:destination="@id/registerFragment" />
    </fragment>
    <fragment
        android:id="@+id/postRequestsFragment"
        android:name="com.example.lostandfound.feature.mylist.PostRequestsFragment"
        android:label="fragment_post_requests"
        tools:layout="@layout/fragment_post_requests" />
    <fragment
        android:id="@+id/messagesFragment"
        android:name="com.example.lostandfound.feature.chat.MessagesFragment"
        android:label="fragment_messages"
        tools:layout="@layout/fragment_messages" >
        <action
            android:id="@+id/action_messagesFragment_to_chatFragment"
            app:destination="@id/chatFragment" />
    </fragment>
    <fragment
        android:id="@+id/claimFragment"
        android:name="com.example.lostandfound.feature.claimitem.ClaimFragment"
        android:label="ClaimFragment" />
    <fragment
        android:id="@+id/resetPasswordFragment"
        android:name="com.example.lostandfound.feature.auth.ResetPasswordFragment"
        android:label="fragment_reset_password"
        tools:layout="@layout/fragment_reset_password" />
</navigation>